---
import { getCollection } from "astro:content";

import BaseLayout from "@layouts/BaseLayout.astro";
import PostCard from "@components/PostCard.astro";

const title = "Notes";
const description =
  "This is my personal wiki or digital garden. Here I keep notes related to the things I'm learning, as well as some personal stuff.";

const notes = await getCollection("notes");
---

<BaseLayout title={title} description={description}>
  <section class="mb-6">
    <h1 class="mb-3 text-4xl font-bold text-blue md:mb-6 md:text-5xl">{title}</h1>
    <div class="prose max-w-none">
      <p>
        This is my personal wiki or digital garden. Here I keep notes related to the things I'm learning, as well as
        some personal stuff like <a href="/notes/computers">an overview of my computing devices</a> and
        <a href="/notes/books">my reading list</a>.
      </p>
    </div>
    <ul class="mt-6 gap-8 space-y-4 md:columns-2 xl:columns-3 [&>li]:break-inside-avoid">
      {notes.map(note => <PostCard post={note} />)}
    </ul>
  </section>
</BaseLayout>
