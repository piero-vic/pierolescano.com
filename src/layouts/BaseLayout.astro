---
import "@fontsource/jetbrains-mono/200.css";
import "@fontsource/jetbrains-mono/200-italic.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/400-italic.css";
import "@fontsource/jetbrains-mono/700.css";
import "@fontsource/jetbrains-mono/700-italic.css";

import "@styles/global.css";

import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const { title, description = "", image = "logo.png", type = "website" } = Astro.props;
---

<html lang="en">
  <BaseHead title={title} description={description} image={image} type={type} />
  <body class="mx-auto flex h-screen max-w-5xl flex-col bg-black px-6 font-mono text-foreground">
    <Header />
    <main id="main" class="grow md:py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
